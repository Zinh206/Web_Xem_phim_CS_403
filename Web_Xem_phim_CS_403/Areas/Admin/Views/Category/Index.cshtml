@model IEnumerable<Web_Xem_phim_CS_403.Models.Category>

<div class="container my-4">
    <h2 class="text-center mb-4">Manager Category</h2>
    <div class="d-flex justify-content-end mb-2">
        <a asp-action="Create" class="btn btn-secondary">
            <i class="bi bi-plus-circle"></i> Add
        </a>
    </div>
    <table class="table table-bordered text-center">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <form asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash3"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
